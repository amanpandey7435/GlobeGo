<% layout("/layouts/boilerplateCode") -%>


  <style>
   

    .filter{
      display:flex;
      justify-content: space-between;
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      align-items: center;
    }
    .filter p{
      font-size: 0.8rem;

    }
    .icons{
      opacity: 0.7;
      font-size: 1.2rem;
    }
    .icons:hover{
      opacity:1;
      cursor:pointer;
      text-decoration: underline;
    }
    .tax-info{
      display: none;
    }
    .tax-toggle{
      border: 2px solid rgb(53, 51, 51);
      border-radius: 1rem;
     display: flex;
     align-items: center;
      height:3.25rem;
      padding:1rem;
      margin-left:1rem ;
      margin-bottom: 1rem;
    }
    
  </style>
  <!-- <h1>All Listings</h1> -->
   <div id="filters" >
    <div class="filter">
      <div class="icons">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      
      <div class="icons">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      
      <div class="icons">
        <i class="fa-solid fa-city"></i>
        <p>Iconic Cities</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Mountains</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-building-wheat"></i>
        <p>Castle</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctics</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-route"></i>
        <p>Camping</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-tractor"></i>
         <p>Farms</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-person-swimming"></i>

         <p>Pools</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-igloo"></i>

         <p>Domes</p>
      </div>
      <div class="icons">
        <i class="fa-solid fa-ship"></i>

         <p>Boats</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes after Total</label>
        </div>
      </div>
    </div>
   </div>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3">
    <%for(let listing of listings){%>
      <a href="/listings/<%=listing._id%>" class="card-anchor">
        <div class="card col"  height:29rem">
          <img src="<%=listing.image.url%>" style="height: 23rem;padding: 0;" class="card-img-top" alt="...">
          <div class="card-body" style="padding:0">
            <p class="card-text"><%=listing.title%> <br>
            &#8377;<%=listing.price.toLocaleString("en-IN")%>/night <i class="tax-info">&nbsp; &nbsp;+18% GST</i></p>
                  
          </div>
        </div>
      </a>
        <%}%>
   </div>

    <script>
      let taxSwitch=document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
          if(info.style.display!='inline'){
            info.style.display="inline";

          }
          else{
            info.style.display="none";
          }
        }
      })
    </script>
